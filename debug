# Script to run the Flask web application in debug mode
# This automatically reloads the code when you change the files and gives you
# nice printouts when your code crashes.
#
# After running this script, open a web browser to localhost:5000 or 127.0.0.1:5000

export FLASK_APP=main.py
export FLASK_DEBUG=1
export DASHBOARD_CONFIG=dashboard.config
flask run

